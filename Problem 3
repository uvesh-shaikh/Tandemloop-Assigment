def generate_conditional_series(a):
    if a % 2 == 0:
        n = a - 1
    else:
        n = a
    
    result = []
    for i in range(1, n + 1):
        odd_num = 2 * i - 1
        result.append(str(odd_num))
        
    print(", ".join(result))


if __name__ == "_main_":
    # Test cases from your problem statement
    inputs = [1, 2, 3, 4, 5, 6]
    for x in inputs:
        print(f"Input a = {x}, then output : ", end="")
        generate_conditional_series(x)